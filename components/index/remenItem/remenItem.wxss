/* components/index/renmenItem/remmenItem.wxss */

.remen_item {
  padding: 26rpx 28rpx 40rpx 0;
  position: relative;
}

.title_box {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 34rpx;
}

.title {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 36rpx;
  color: #161616;
}

.title_box .addBtn image {
  display: inline-block;
  width: 70rpx;
  height: 60rpx;
}

.title_box .addBtn {
  height: 60rpx;
  background: rgba(42, 192, 203, 1);
  border-radius: 6rpx;
  position: absolute;
  right: 0;
  top: 42rpx;
}

.title_box .addBtn .text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 60rpx;
  vertical-align: top;
  padding-left: 21rpx;
  display: none;
}
.title_box .addBtnHover .text{
  display: inline-block;
}

.main_content {
  display: flex;
  height: 140rpx;
}

.main_tu {
  width: 140rpx;
  height: 140rpx;
  margin-right: 26rpx;
  position: relative;
}

.main_tu .tu {
  display: block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 6rpx;
}

.main_tu .icon {
  display: block;
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 34rpx;
  height: 34rpx;
}

.main_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #383838;
}

.canshu {
  font-size: 20rpx;
  color: #383838;
}
