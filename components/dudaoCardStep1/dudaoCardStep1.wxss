/* components/dudaoCard/dudaoCard.wxss */

.dudaoCard {
  padding: 30rpx 28rpx 0 36rpx;
  background: #fff;
  position: relative;
}
.dudaoCard .top{
  height: 203rpx;
  border-bottom: 1rpx solid rgba(241,241,241,1);
}
.dudaoCard .bottom{
  padding-bottom: 26rpx;
}
.dudaoCard .bottom .user{
  margin-top: 22rpx;
  display: inline-block;
  margin-right: 18rpx;
}
.dudaoCard .bottom .user:nth-last-of-type(1){
  margin-right: 0;
}
.dudaoCard .bottom .user image{
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  display: block;
}
.dudaoCard .bottom .user .b_name{
  font-size:22rpx;
color:rgba(51,51,51,1);
line-height:30rpx;
margin-top: 5rpx;
}
.dudaoCard .icon {
  width: 178rpx;
  display: inline-block;
  vertical-align: top;
}

.dudaoCard .icon image {
  width: 178rpx;
  height: 178rpx;
  border-radius: 5rpx;
}

.dudaoCard .info {
  width: 508rpx;
  display: inline-block;
  padding-left: 44rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.dudaoCard .info .name {
  font-size: 30rpx;
  color: rgba(1, 1, 1, 1);
  line-height: 42rpx;
}
.dudaoCard .info .name text{
background:rgba(231,246,247,1);
font-size:18rpx;
line-height: 18rpx;
display: inline-block;
margin-left: 16rpx;
padding: 6rpx 8rpx;
color:rgba(31,170,180,1);
}
.dudaoCard .info .num {
  font-size: 24rpx;
  color: rgba(97, 97, 97, 1);
  line-height: 33rpx;
  margin-top: 10rpx;
}

.dudaoCard .info .peo {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  margin-top: 69rpx;
}

.dudaoCard  .xiBtn {
width:153rpx;
line-height:60rpx;
background:rgba(42,192,203,1);
border-radius:30rpx;
  overflow: hidden;
  position: absolute;
  right: 28rpx;
  top: 24rpx;
  padding: 0;
  font-size:26rpx;
color:rgba(255,255,255,1);
}
