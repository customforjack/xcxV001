/* components/dakaSuccess/dakaSuccess.wxss */

.daka-box .mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.73);
  z-index: 100;
}
.daka-box .tit{
  font-size: 38rpx;
  line-height: 100rpx;
}
.daka-box .tit image{
  width: 100%;
  display: block;
  height: 350rpx;
  margin: 0 auto;
}
.daka-box .to-say {
  width: 489rpx;
  height: 88rpx;
  background: rgba(243, 247, 248, 1);
  border-radius: 14rpx;
  text-align: center;
}

.daka-box .dakaSuccess {
  box-sizing: border-box;
  padding: 0 50rpx;
  position: fixed;
  width: 589rpx;
  height: 540rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  left: 81rpx;
  top: 50%;
  margin-top: -320rpx;
  z-index: 1000;
}

.daka-box .i-know {
  width: 282rpx;
  line-height: 88rpx;
  background: rgba(95, 211, 219, 1);
  border-radius: 5rpx;
  font-size: 30rpx;
  color: rgba(22, 22, 22, 1);
  margin-top: 70rpx;
}
.daka-box .no-again-show{
  font-size:28rpx;
color:rgba(153,153,153,1);
line-height:40rpx;
background: none;
border: none;
width: 150rpx;
margin: 60rpx auto 0;
padding: 0;
}
.daka-box .no-again-show:after{
  display: none;
}
.daka-box .say-pl {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  letter-spacing: 1rpx;
  text-align: center;
}

.daka-box .close {
  text-align: center;
  position: fixed;
  z-index: 101;
  width: 84rpx;
  height: 84rpx;
  bottom: 50rpx;
  left: 333rpx;
}

.daka-box .close image {
  display: block;
  width: 100%;
  height: 100%;
}
