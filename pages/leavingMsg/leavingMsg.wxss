/* pages/leavingMsg/leavingMsg.wxss */
.leavingMsg{
  padding: 0 37rpx;
}
.tip{
  text-align: left;
  padding: 0 3rpx;
}
.tip button {
  display: inline-block;
  width: 302rpx;
  height: 56rpx;
  background: rgba(195, 236, 239, 1);
  border-radius: 28rpx;
  font-size: 22rpx;
  color: rgba(69, 180, 188, 1);
  line-height:56rpx;
  opacity: 0.7016;
}
.leavingMsg .say{
  font-size:32rpx;
  color:rgba(183,183,183,1);
  line-height:45rpx;
  margin-top: 60rpx;
  width: 100%;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  min-height: 175rpx;
}
.leavingMsg .show .imgBox{
  width: 212rpx;
  height: 212rpx;
  display: inline-block;
  margin-right: 21rpx;
  margin-bottom:40rpx;
  position: relative;
}
.leavingMsg .show .imgBox image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 10rpx;
}
.leavingMsg .show .imgBox:nth-of-type(3n+0){
  margin-right: 0;
}
.leavingMsg .show .imgBox .icon {
  width: 36rpx;
  height: 36rpx;
  background: #5fd3db;
  border-radius: 50%;
  position: absolute;
  top: -18rpx;
  right: -18rpx;
}
.leavingMsg .show  .audioPlay{
  padding: 0 30rpx;
  line-height:60rpx;
border-radius:30rpx;
font-size:22rpx;
color:rgba(69, 180, 188, 1);
text-align: left;
border: none;
width: 400rpx;
position: relative;
  display: inline-block;
}

.leavingMsg .show  .audioPlay:after{
  display: none;
}
.leavingMsg .show  .audioPlay image{
  height: 40rpx;
  width: 40rpx;
  vertical-align: middle;
  display: inline-block;
}
.leavingMsg .show   .audioCard .delBtn{
  width: 45rpx;
  height: 45rpx;
  display: inline-block;
  vertical-align: top;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.leavingMsg .show  .audioPlay .text{
  width: 300rpx;
  display: inline-block;
  line-height: 40rpx;
  text-align: right;
  vertical-align: middle;
  font-size: 28rpx;
}
.leavingMsg .show .imgBox .line {
  height: 4rpx;
  background: #fff;
  margin-top: 16rpx;
  width: 20rpx;
  margin-left: 9rpx;
}
.sayType{
  margin-top: 40rpx;
}
.sayType button{
  display: inline-block;
  width: 212rpx;
  height: 210rpx;
  line-height: 210rpx;
  vertical-align: middle;
  background:rgba(243,247,248,1);
  border: none;
  margin-right: 21rpx;
}
.sayType button:after{
  display: none;
}
.sayType button:nth-of-type(1) image{
  width: 44rpx;
  height: 65rpx;
}
.sayType button:nth-of-type(2) image{
  width: 64rpx;
  height: 64rpx;
}
.sayType button:nth-of-type(3){
  margin-right: 0;
}
.sayType button:nth-of-type(3) image{
  width: 70rpx;
  height: 46rpx;
}
.fbBtn{
  background:rgba(95,211,219,1);
  border-radius:10rpx;
  font-size:38rpx;
  margin-top: 78rpx;
  color:rgba(22,22,22,1);
  line-height: 96rpx;
}
.leavingMsg .stopAudio{
  position: fixed;
  width: 200rpx;
  margin-left: -100rpx;
  left: 50%;
  bottom: 40rpx;
  padding: 0;
  font-size: 20rpx;
}