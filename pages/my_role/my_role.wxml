<!--pages/my_role/my_role.wxml-->
<view class='circle_top'>
    <view class='tab_item' bindtap='changeTab' data-tab='0'>
      <text class="text {{flag==0?'act':''}}">已使用</text>
    </view>
    <view class='tab_item' bindtap='changeTab' data-tab='1'>
      <text class="text {{flag==1?'act':''}}">未使用</text>
    </view>
  </view>
  

 <block wx:if="{{flag==0}}">
  <view class='tilte' wx:for='{{roleList}}' bindtap='details' data-id='{{role.id}}'  wx:for-item="role"  wx:key="unique">
    <view class='content'>
     <view>
      <image src='{{role.thumbnail}}'></image>
      </view>
     <view class='miaoshu'>
      <text> 
         {{role.name}}
      </text>
      <text>
         {{role.description}}
      </text>
      <text>
      有效期至{{role.end_time}}
      </text>
     </view>
      <view class='qdd'>已使用</view>
     <view class='click_ta'>续费</view>
    </view>
  </view>
 
 </block>


 <block wx:if="{{flag==1}}">
  <view class='tilte' wx:for='{{roleList_no}}' wx:for-item="norole" bindtap='details' data-id='{{norole.id}}'  wx:key='key_list'>
    <view class='content'>
     <view>
      <image src='{{norole.thumbnail}}'></image>
      </view>
     <view class='miaoshu'>
      <text> 
         {{norole.name}}
      </text>
      <text> 
          {{norole.description}}
      </text>
      <text class='validity'>
      有效期至{{norole.end_time}}
      <text class='remnant'>剩余{{norole.number2}}件</text>
      </text>
     </view>
      <!-- <view class='qdd'>钱多多</view> -->
     <view class='click_cade'>续费</view>
     <view class='click_cade click_cade2'>赠送</view>
    </view>
      
  </view> 
   
</block>
